{
    "compilerOptions": {
        "types": [
            "reflect-metadata"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "target": "es5",
        "sourceMap": true,
        "resolveJsonModule": true,
        "strict": true,
        "esModuleInterop": true,
        "typeRoots": ["./node_modules/@types", "./src"],
        "baseUrl": "./",
        "paths": {
            "@Shared/*": [
                "Shared/*"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*",
        "express-session.d.ts",
        "types/**/*"
    ]
}